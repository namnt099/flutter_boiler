default_platform(:android)

platform :android do
  desc "Build and distribute APK to Firebase"
  lane :deploy_firebase do
    flavor = ENV["FLAVOR"] || "product" # Láº¥y tá»« biáº¿n mÃ´i trÆ°á»ng, máº·c Ä‘á»‹nh lÃ  "product"
    UI.message "ğŸš€ Building flavor: #{flavor}" # Kiá»ƒm tra giÃ¡ trá»‹ FLAVOR
    app_id = ENV["APP_ID"] || ""

    apk_path = "../build/app/outputs/flutter-apk/app-#{flavor}-release.apk"

    firebase_app_distribution(
      app: app_id,
      android_artifact_type: "APK",
      android_artifact_path: apk_path,
      groups: "test",
      release_notes: "Release notes for this #{flavor} build",
      firebase_cli_token: ENV["FIREBASE_TOKEN"]
    )
  end
end
